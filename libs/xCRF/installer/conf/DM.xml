		<item type="highlights" icon="tasks" text="Activity list by Site" color="green">
			<query><![CDATA[
						select * from (select * from 
(select 
  'index.php?CODPAT='||c.CODPAT||'&amp;VISITNUM='||c.VISITNUM||'&amp;ESAM='||c.ESAM||'&amp;VISITNUM_PROGR='||c.VISITNUM_PROGR||'&amp;PROGR='||c.PROGR as LINK,
  '[ESAM_NAME('||c.VISITNUM||','||c.ESAM||')] - Patient Code: '||c.CODPAT as MESSAGE, 
  greatest(c.INSERTDT, nvl(c.MODDT,to_date('01010001','DDMMYYYY'))) as DT,
  case when FINE is null then 'check-square-o'
  else 'pencil' end as ICON
from [PREFIX]_COORDINATE c, [PREFIX]_REGISTRAZIONE r
						where r.CODPAT=c.CODPAT
						and r.CENTER in (select uc.center from [PREFIX]_UTENTI_CENTRI uc where uc.userid=:userid)
						and INIZIO is not null
						--CODPAT_WHERE--
UNION ALL
select 
'index.php?&exams=visite_exam.xml&CODPAT='||c.CODPAT||'&CENTER='||c.CENTER||'&ESAM='||c.ESAM||'&VISITNUM='||c.VISITNUM||'&PROGR='||c.PROGR||'&VISITNUM_PROGR='||C.VISITNUM_PROGR||'&ABILITA_EQ_DM=1' as LINK,
case 
  when CHIUSA is not null then 'eQuery '||c.id||' closed'
  when VALIDATA is not null then 'eQuery '||c.id||' validated'
  when ANSWER is not null then 'eQuery '||c.id||' answered'
  else 'eQuery '||c.id||' opened'  
  end as MESSAGE, 
  greatest(c.QUEST_DT, nvl(c.ANS_DT,to_date('01010001','DDMMYYYY')), nvl(c.VAL_DT,to_date('01010001','DDMMYYYY')), nvl(c.CHIUSA_DT,to_date('01010001','DDMMYYYY'))) as DT,
  case when CHIUSA is not null then 'lock'
  when VALIDATA is not null then 'check'
  when ANSWER is not null then 'reply'
  else 'comment'  
  end as ICON
  from [PREFIX]_EQUERY c
						where c.CENTER in (select uc.center from [PREFIX]_UTENTI_CENTRI uc where uc.userid=:userid)
						--CODPAT_WHERE--
) t order by t.dt desc)
where rownum < 10]]>
			</query>
