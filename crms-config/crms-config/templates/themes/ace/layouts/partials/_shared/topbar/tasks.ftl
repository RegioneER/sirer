<li class="grey">
	<a data-toggle="dropdown" class="dropdown-toggle" href="#">
		<i class="icon-tasks"></i>
		<#if layout._topbar_tasks.count gt 0 ><span class="badge badge-grey">${layout._topbar_tasks.count}</span></#if>
	</a>

	<ul class="pull-right dropdown-navbar dropdown-menu dropdown-caret dropdown-close">
		<li class="dropdown-header">
			<i class="icon-ok"></i> ${layout._topbar_tasks.count} Tasks to complete
		</li>

		<#list layout._topbar_tasks.latest as task >
		<li>
			<a href="#">
				<div class="clearfix">
					<span class="pull-left">${task.title}</span>
					<span class="pull-right">${task.percentage}%</span>
				</div>
				<div class="progress progress-mini ${task.progress_class!}">
					<div style="width:${task.percentage}%" class="progress-bar ${task.progress_bar_class!}"></div>
				</div>
			</a>
		</li>
		</#list>

		<li>
			<a href="#">
				See tasks with details
				<i class="icon-arrow-right"></i>
			</a>
		</li>
	</ul>
</li>